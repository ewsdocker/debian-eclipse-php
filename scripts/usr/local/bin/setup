echo ""

lines=()
mapfile -t lines < /etc/ewsdocker-builds.txt

echo

for line in "${lines[@]}"
do
  echo ${line}
done

echo
echo -n "Copying icon to configuration folder ... "
cp /usr/local/share/eclipse/icon.xpm /root

echo "done."
echo ""

echo -n "Copying files to /userbin... "
cp /usr/local/bin/*.run /userbin

echo "done."
echo ""
